extends layout

block content
  // Top Navbar
  div.navbar.navbar-fixed-top
    div.navbar-inner
      div.container-fluid
        a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href="#") Gofer
        div.nav-collapse.collapse
        if user
          p.navbar-text.pull-right Logged in as #{user.name.first}
          p.navbar-text.pull-right <a href="/logout", data-toggle='modal'> Sign out </a>
        else
          form.navbar-form.pull-right(action='/login', method='post')
            input.span2(id="username", type="text", name="username", placeholder="Email")
            input.span2(id="password", type="password", name="password", placeholder="Password")
            button.btn(type="submit") Sign In
          p.navbar-text.pull-right Login or <a href="#register", data-toggle='modal'> Sign up </a>
        ul.nav
          if user
            li.active
              a(href="#") Store Home
            li
              a(href="#about") How To
            li
              a(href="#contact") Contact
          else
            li.active
              a(href="#demo") Demo
            li
              a(href="#learn-more") FAQ
            li
              a(href="#contact") Contact
  if alert != ''
    if alert_type == 'success'
      div.alert.alert-success
        a.close(href="#", data-dismiss="alert") &times;
        <strong>Wahoo!</strong> #{alert}
    else
      div.alert.alert-error
        button.close(type="button", data-dismiss="alert") &times;
        <strong>Uh Oh!</strong> #{alert}
  //


  //Sidebar and Main Content
  div#main.container-fluid
    div.row-fluid
      div.span2
        div#main-nav.well.sidebar-nav
          ul.nav.nav-list
            li.active
              a(href='#') <i class='icon-th'></i> Dashboard
            li
              a(href='#') <i class='icon-shopping-cart'></i> Point Of Sale
            li
              a#inventory-link(href='#') <i class='icon-tags'></i> Inventory
            li
              a(href='#') <i class='icon-user'></i> Staff
            li
              a(href='#') <i class='icon-book'></i> Accounting
      div.span10
        div#main-window.hero-unit
          if user == null
            h1 Welcome to Gofer.
            p An easier way to manage your business


  // signup modal markup/logic from project_root/views/signup_modal.jade
  // and js file in the public/js dir
  include signup_modal
  script(type='text/javascript', src='js/signup.js')
  //
