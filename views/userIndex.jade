extends layout

block content

  // Top Navbar
  div#someID.navbar
    div.navbar-inner
      div.container
        a.btn.btn-navbar(data-toggle="collapse", data-target=".nav-collapse")
          span.icon-bar
          span.icon-bar
          span.icon-bar
        a.brand(href="#") Gofer
        div.nav-collapse
          ul.nav.pull-right
            li
              p.navbar-text.pull-right <a href="/logout", data-toggle='modal'> Sign out </a>
            li.divider-vertical
            li
              p.navbar-text.pull-right #{user.name.first} #{user.name.last}
          ul.nav
            li
              a(href="#") Help

  if info_alert != ''
    div.alert.alert-success
      a.close(href="#", data-dismiss="alert") &times;
      <strong>Wahoo!</strong> #{info_alert}
  if error_alert != ''
    div.alert.alert-error
      button.close(type="button", data-dismiss="alert") &times;
      <strong>Uh Oh!</strong> #{error_alert}


  div#main.container-fluid
    div.row-fluid
      div.span2
        div#main-nav.well.sidebar-nav
          ul.nav.nav-list
            li.nav-header General
            li#dashboard-link.active
              a(href='#dashboard-main-content', data-toggle='tab')
                <i class='icon-th'></i> Dashboard
            li#pos-link
              a(href='#pos-main-content', data-toggle='tab')
                <i class='icon-shopping-cart'></i> Point Of Sale
            li#inventory-link
              a(href='#inventory-main-content', data-toggle='tab')
                <i class='icon-tags'></i> Inventory
            li.nav-header Management
            li#company-link
              a(href='#company-main-content', data-toggle='tab')
                <i class='icon-home'></i> Company
            li#people-link
              a(href='#people-main-content', data-toggle='tab')
                <i class='icon-user'></i> People
            li#finance-link
              a(href='#finance-main-content', data-toggle='tab')
                <i class='icon-book'></i> Finance
      div.span10
        div#main-window-main-content.tab-content
          div#dashboard-main-content.tab-pane
          div#pos-main-content.tab-pane
          div#inventory-main-content.tab-pane
            div
              h1 Inventory
                p.lead everything on one shelf
              ul.nav.nav-pills
                li#product-menu-pill.active
                  a(href='#inventory-main-view', data-toggle='tab') Stock
                li(id-='id-', order-menu-pill='order-menu-pill')
                  a(href='#order-main-view', data-toggle='tab') Orders
              .tab-content
                #inventory-main-view.tab-pane.active
                  .tabbable
                    ul.nav.nav-tabs
                      li#inventory-list-tab.active
                        a(href='#', data-toggle='tab') List
                      li#inventory-item-tab
                        a(href='#', data-toggle='tab') View
                      li#inventory-create-tab
                        a(href='#', data-toggle='tab') Create/Edit
                    .tab-content
                      #inventory-view-content.tab-pane.active
                        #inventory-view-head
                        #inventory-view-body
                      // #product-item-view.tab-pane
                      // #product-create-view.tab-pane
                #order-main-view.tab-pane
                  .tabbable
                    ul.nav.nav-tabs
                      li.active
                        a(href='#order-list', data-toggle='tab') List
                      li
                        a(href='#order-view', data-toggle='tab') View
                      li
                        a(href='#order-create', data-toggle='tab') Create/Edit
                    .tab-content
                      #order-list.tab-pane.active
                      #order-view.tab-pane
                      #order-create.tab-pane

          div#people-main-content.tab-pane
